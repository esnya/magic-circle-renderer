@import 'nib'
@import './align'

.overlayPanel
    @extends .fill

    position: absolute
    top: 0
    left: 0

    width: 100%
    height: 100%

    display: flex
    overflow: hidden

    & > *
        flex: 1 1 0;
        color: #ffffff
        overflow: auto

        transition: transform 0.4s ease-in-out
        transform: translate(0, 0)

    & > :first-child,
    & > :last-child
        flex: 0 0 auto
        padding: 5px

        background-color: rgba(0, 0, 0, 0.5)
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5)

    &.hidden > *
        transform: translate(0, -100%)
    &.hidden > :first-child
        transform: translate(-100%, 0)
    &.hidden > :last-child
        transform: translate(100%, 0)

